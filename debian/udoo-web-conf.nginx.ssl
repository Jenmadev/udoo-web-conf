server {
    listen 443;

    server_name ;

    ssl    on; 
    ssl_certificate        /opt/ssl/udoo-web-conf/production.pem;
    ssl_certificate_key    /opt/ssl/udoo-web-conf/production.key;

    # add_header Strict-Transport-Security max-age=500; 

    location / {
        proxy_pass http://unix:/var/run/proxy.sock/udoo-web-conf.443:$uri$is_args$args;
        proxy_cache_bypass $http_upgrade;
        proxy_redirect off;
        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-NginX-Proxy true;
        proxy_set_header X-SSL 1;
    }
}
